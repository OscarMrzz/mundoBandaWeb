---
import { record } from "astro:schema";
import Ola from "./Ola.astro";

export interface Props {
  Titulo: string;
  direccion?: string;
  columnas: number;
  filas: number;
  hojaActiva?: boolean;
}
const { Titulo, direccion , columnas, filas, hojaActiva=false} = Astro.props;

const columnasValidas: Record<number,string>=
  {
    1: "col-span-1",
    2: "col-span-2",
    
  }

  const filasValidas: Record<number,string>=
  {
    1: "row-span-1",
    2: "row-span-2",
    
  }

---

<a href={direccion ? direccion : '#'}
    class={`${columnasValidas[columnas]} ${filasValidas[filas]}`}


>
  <div
    class=`${hojaActiva? "bg-gray-700" :"bg-gray-700 opacity-20"}  rounded-2xl h-full  shadow-lg overflow-hidden hover:scale-105 transition-transform duration-300 relative`
  >
  <div class="flex justify-center items-center h-full flex-col p-4">
    <!-- Contenido por encima de la ola -->


   <div class="flex justify-center items-center ">

      <slot/>
    </div>
    <div class="text-gray-400 p-4 relative z-10">
      <h2 class="text-lg font-bold text-gray-300">{Titulo}</h2>
    </div>
    <div>
     {!hojaActiva? <span class="text-red-400">en desarollo...</span>:null}
    </div>
      </div>
    
    <div class="absolute z-0">
  
    </div>
  </div>
</a>
